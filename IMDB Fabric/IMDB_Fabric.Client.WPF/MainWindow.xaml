<Window x:Class="IMDB_Fabric.Client.WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:IMDB_Fabric.Client.WPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Window.DataContext>
        <local:MainViewModel/>
    </Window.DataContext>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <TextBlock Grid.Row="0"
                   Grid.Column="0"
                   TextAlignment="Center"
                   FontSize="30"
                   FontWeight="ExtraBlack"
                   Text="Application Events" />
                   
        <ItemsControl Grid.Row="1"
                      Grid.Column="0"
                      Grid.RowSpan="3"
                      ItemsSource="{Binding Events}"
                      Background="LightGreen">
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="{Binding Name}" />
                        <Image Source="{Binding ImageUrl}" Margin="5" Height="70" />

                        <TextBlock Text="{Binding Sender.Name}" />
                        <Image Source="{Binding Sender.ImageUrl}" Margin="5" Height="70" />
                    </StackPanel>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>

        <TextBlock Grid.Row="0"
                   Grid.Column="1"
                   TextAlignment="Center"
                   FontSize="30"
                   FontWeight="ExtraBlack"
                   Text="Top 10 Movies" />
        
        <ItemsControl Grid.Row="1"
                      Grid.Column="1"
                      ItemsSource="{Binding MoviesRates}"
                      Background="LightBlue">
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="{Binding Name}" />
                        <Image Source="{Binding ImageUrl}" Margin="5" Height="70"/>

                        <TextBlock Margin="5">
                            <Run Text="{Binding Name, Mode=OneWay}"/>
                            <Run Text="{Binding Count, Mode=OneWay}"/>
                        </TextBlock>
                    </StackPanel>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>

        <TextBlock Grid.Row="2"
                   Grid.Column="1"
                   TextAlignment="Center"
                   FontSize="30"
                   FontWeight="ExtraBlack"
                   Text="Top 10 Stars" />

        <ItemsControl Grid.Row="3"
                      Grid.Column="1"
                      ItemsSource="{Binding StarsRates}"
                      Background="LightPink">
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="{Binding Name}" />
                        <Image Source="{Binding ImageUrl}" Margin="5" Height="70"/>

                        <TextBlock Margin="5">
                            <Run Text="{Binding Name, Mode=OneWay}"/>
                            <Run Text="{Binding Count, Mode=OneWay}"/>
                        </TextBlock>
                    </StackPanel>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
    </Grid>
</Window>
